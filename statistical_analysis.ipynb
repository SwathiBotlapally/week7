# STATISTICAL BUSINESS ANALYSIS
# -------------------------------

# 1. Import libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from scipy import stats
import statsmodels.api as sm

# 2. Load data
df = pd.read_csv("business_data.csv")
df["Month"] = pd.Categorical(df["Month"], categories=df["Month"], ordered=True)

# 3. Descriptive statistics
mean_sales = df["Sales"].mean()
median_sales = df["Sales"].median()
mode_sales = df["Sales"].mode()[0]
std_sales = df["Sales"].std()

print("DESCRIPTIVE STATISTICS")
print(f"Mean: {mean_sales}, Median: {median_sales}, Mode: {mode_sales}, Std Dev: {std_sales}\n")

# 4. Histogram (Distribution)
plt.figure(figsize=(6,4))
plt.hist(df["Sales"], bins=6, color='skyblue', edgecolor='black')
plt.title("Sales Distribution")
plt.xlabel("Sales")
plt.ylabel("Frequency")
plt.show()

# 5. Normality test
shapiro_test = stats.shapiro(df["Sales"])
print("Shapiro-Wilk Test for Normality:", shapiro_test, "\n")

# 6. Correlation analysis
correlation = df["Sales"].corr(df["Marketing_Spend"])
print(f"Pearson Correlation (Sales vs Marketing Spend): {correlation}\n")

plt.figure(figsize=(4,4))
sns.heatmap(df[["Sales","Marketing_Spend"]].corr(), annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.show()

# 7. Hypothesis Tests
# One-sample t-test (mean 45,000)
t1, p1 = stats.ttest_1samp(df["Sales"], 45000)

# Independent t-test (North vs South)
north = df[df["Region"]=="North"]["Sales"]
south = df[df["Region"]=="South"]["Sales"]
t2, p2 = stats.ttest_ind(north, south)

# ANOVA (Sales across regions)
east = df[df["Region"]=="East"]["Sales"]
west = df[df["Region"]=="West"]["Sales"]
f, p3 = stats.f_oneway(north, south, east, west)

print("HYPOTHESIS TESTS")
print(f"One-Sample t-Test: t={t1:.2f}, p={p1:.4f}")
print(f"Independent t-Test (North vs South): t={t2:.2f}, p={p2:.4f}")
print(f"ANOVA Test (Across Regions): F={f:.2f}, p={p3:.4f}\n")

# 8. Confidence Interval (95%)
conf_level = 0.95
sem = stats.sem(df["Sales"])
ci = stats.t.interval(conf_level, len(df["Sales"])-1, mean_sales, sem)
print(f"95% Confidence Interval for Sales: {ci}\n")

# 9. Regression analysis
X = df["Marketing_Spend"]
y = df["Sales"]
X = sm.add_constant(X)
model = sm.OLS(y, X).fit()
print("REGRESSION ANALYSIS")
print(model.summary())

# 10. Business Insights
print("\nBUSINESS INSIGHTS")
print("- Sales positively correlate with marketing spend (strong correlation).")
print("- Marketing significantly affects sales (p < 0.05).")
print("- Sales vary across regions (ANOVA significant).")
print("- Use insights to focus marketing and high-performing regions.")
